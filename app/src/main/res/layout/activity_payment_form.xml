<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".paymentForm">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PAYMENT"
        android:textColor="#D62D2D"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="29dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Payment Option"
        android:textColor="#100F0F"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="89dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/paymopt"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="91dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#120A0A"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textColor="#090606"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:text="Expiry Month"
        android:textColor="#0C0909"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/expmon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expiry Year"
        android:textColor="#090707"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/expyr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/finalBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay Bill" />

</LinearLayout>